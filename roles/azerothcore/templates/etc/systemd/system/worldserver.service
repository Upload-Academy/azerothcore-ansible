[Unit]
Description=AzerothCore 3.3.5a World Server
After=network.target

[Service]
PrivateTmp=true
Type=simple
PIDFile={{ home }}/{{ azerothcore_folder }}/temp/worldserver.pid
WorkingDirectory={{ home }}/{{ azerothcore_folder }}/{{ azerothcore_server_release }}/bin/
ExecStart={{ home }}/{{ azerothcore_folder }}/{{ azerothcore_server_release }}/bin/worldserver

[Install]
WantedBy=multi-user.target